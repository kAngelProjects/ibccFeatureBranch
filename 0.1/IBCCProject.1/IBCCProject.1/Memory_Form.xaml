                            <Button Content="K" Height="50" HorizontalAlignment="Left" Margin="796,134,0,0" Name="kButton" VerticalAlignment="Top" Width="74" Click="kButton_Click" FontFamily="Century"/>
                            <Button Content="L" Height="50" HorizontalAlignment="Left" Margin="892,134,0,0" Name="lButton" VerticalAlignment="Top" Width="74" Click="lButton_Click" FontFamily="Century"/>
                            <Button Content="Z" Height="50" HorizontalAlignment="Left" Margin="16,210,0,0" Name="zButton" VerticalAlignment="Top" Width="74" Click="zButton_Click" FontFamily="Century"/>
                            <Button Content="X" Height="50" HorizontalAlignment="Left" Margin="115,210,0,0" Name="xButton" VerticalAlignment="Top" Width="74" Click="xButton_Click" FontFamily="Century"/>
                            <Button Content="C" Height="50" HorizontalAlignment="Left" Margin="215,210,0,0" Name="cButton" VerticalAlignment="Top" Width="74" Click="cButton_Click" FontFamily="Century"/>
                            <Button Content="V" Height="50" HorizontalAlignment="Left" Margin="312,210,0,0" Name="VButton" VerticalAlignment="Top" Width="74" Click="VButton_Click" FontFamily="Century"/>
                            <Button Content="B" Height="50" HorizontalAlignment="Left" Margin="510,210,0,0" Name="bButton" VerticalAlignment="Top" Width="74" Click="bButton_Click" FontFamily="Century"/>
                            <Button Content="N" Height="50" HorizontalAlignment="Left" Margin="604,210,0,0" Name="nButton" VerticalAlignment="Top" Width="74" Click="nButton_Click" FontFamily="Century"/>
                            <Button Content="M" Height="50" HorizontalAlignment="Right" Margin="0,210,316,0" Name="mButton" VerticalAlignment="Top" Width="74" Click="mButton_Click" FontFamily="Century"/>
                            <Viewbox Margin="-165,143,806,104" Height="32">
                                <CheckBox Name="capsLock">Caps</CheckBox>
                            </Viewbox>
                            <Button Content="Bcksp" Height="50" HorizontalAlignment="Left" Margin="977,6,0,0" Name="backspaceButton" VerticalAlignment="Top" Width="109" Click="backspaceButton_Click" FontFamily="Century"/>
                                <Button Content="1" Height="50" HorizontalAlignment="Left" Margin="16,6,0,0" Name="oneButton" VerticalAlignment="Top" Width="74" Click="oneButton_Click"/>
                                <Button Content="2" Height="50" HorizontalAlignment="Left" Margin="115,6,0,0" Name="twoButton" VerticalAlignment="Top" Width="74" Click="twoButton_Click"/>
                                <Button Content="3" Height="50" HorizontalAlignment="Left" Margin="214,6,0,0" Name="threeButton" VerticalAlignment="Top" Width="74" Click="threeButton_Click"/>
                                <Button Content="4" Height="50" HorizontalAlignment="Left" Margin="313,6,0,0" Name="fourButton" VerticalAlignment="Top" Width="74" Click="fourButton_Click"/>
                                <Button Content="5" Height="50" HorizontalAlignment="Left" Margin="412,6,0,0" Name="fiveButton" VerticalAlignment="Top" Width="74" Click="fiveButton_Click"/>
