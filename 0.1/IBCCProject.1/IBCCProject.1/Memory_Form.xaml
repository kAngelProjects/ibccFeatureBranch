                                <Button Content="!" Height="50" HorizontalAlignment="Left" Margin="993,65,0,0" Name="exclamationButton" Click="exclamationMarkButton_Click" VerticalAlignment="Top" Width="74" />
                            </Grid>
                    </TabItem>
                </TabControl>
                    <Label Content="* indicates a required field on the entry form." Height="28" HorizontalAlignment="Left" Margin="218,-40,0,0" Name="label5" VerticalAlignment="Top" FontFamily="Century" Foreground="#FF9C4A0E" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
