                                <Button Content="7" Height="50" HorizontalAlignment="Left" Margin="600,6,0,0" Name="sevenButton" Click="sevenButton_Click" VerticalAlignment="Top" Width="74" />
                                <Button Content="8" Height="50" HorizontalAlignment="Left" Margin="699,6,0,0" Name="eightButton" Click="eightButton_Click" VerticalAlignment="Top" Width="74" />
                                <Button Content="9" Height="50" HorizontalAlignment="Left" Margin="796,6,0,0" Name="nineButton" Click="nineButton_Click" VerticalAlignment="Top" Width="74" />
                                <Button Content="SPACE" FontFamily="Century" Height="50" Margin="412,210,606,19" Name="spaceButton" Click="spaceButton_Click"/>
                                <Button Content="." Height="50" HorizontalAlignment="Left" Margin="896,210,0,0" Name="dotButton" VerticalAlignment="Top" Width="74" Click="dotButton_Click" />
                                <Button Content="," Height="50" HorizontalAlignment="Left" Margin="796,210,0,0" Name="commaButton" Click="commaButton_Click" VerticalAlignment="Top" Width="74" />
