<Window x:Class="IBCCProject._1.Memory_Form"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Memory Form" Height="700" Width="1150"
        ResizeMode="NoResize">
    <Grid>

        <Grid.Background>
            <VisualBrush>
                <VisualBrush.Visual>
                    <Image Source="/IBCCProject.1;component/Images/backgroundStaticImage.PNG"></Image>
                </VisualBrush.Visual>
            </VisualBrush>
        </Grid.Background>

        <Label Content="Return to menu" HorizontalContentAlignment="Center" FontFamily="Century" FontSize="20" Height="34" HorizontalAlignment="Left" Margin="27,77,0,0" Name="label1" VerticalAlignment="Top" Width="170" />
        <Button Name="menuButton" VerticalAlignment="Top" HorizontalAlignment="Left" Background="#FF949392" Margin="44,19,0,0" Height="63" Width="138" Click="menuButton_Click">
            <Image Source="/IBCCProject.1;component/Images/arrow_left.png" Width="70" Height="46"/>
        </Button>

        <Label Content="MEMORY FORM" Height="71" FontSize="48" FontFamily="Century"
               HorizontalAlignment="Center" Margin="260,19,108,0" Name="contact_title" VerticalAlignment="Top" Width="410" Foreground="#FF9C4A0E" FontWeight="SemiBold" />


        <TabControl Height="553" HorizontalAlignment="Left" Margin="12,108,0,0" Name="tabControl1" VerticalAlignment="Top" Width="1104" Background="#FFB7A87D">
            <TabItem Header="About" Name="tabItem1" Height="35" Width="100" FontFamily="Century">
                <Grid>
                     <TextBlock Name="textBlock1" Text="The purpose of this exhibit is to create a living library of wartime experience. If you fought 
in the war, or know someone who did, please consider contributing what you remember." Margin="29,35,29,395" FontSize="16" TextAlignment="Center" TextWrapping="Wrap"/>
                    <TextBlock Height="66" HorizontalAlignment="Left" Margin="235,104,0,0" Name="textBlock2" Text="Please provide any length of memory. If you would prefer to give a short account and describe the rest to a member of the IBCC team, feel free to do so. The Contact screen provides a space for you to leave your contact information." VerticalAlignment="Top" FontSize="16" TextWrapping="Wrap" Width="644" TextAlignment="Center" />
                    <TextBlock Height="49" HorizontalAlignment="Left" Margin="283,176,0,0" Name="textBlock3" Text="If you would like to provide a longer account, please describe where the servicemen and women are now if you can." VerticalAlignment="Top" Width="544" TextAlignment="Center" FontSize="16" TextWrapping="Wrap"/>

                    
                    <Label Content="Have wartime memorabilia? Visit the Contact Screen to see if you could contribute to the Digital Archive." Height="28" HorizontalAlignment="Left" Margin="171,454,0,0" Name="adLabel" VerticalAlignment="Top" Width="739" FontSize="15" FontFamily="Century" />
                    <TextBlock FontSize="16" Height="105" HorizontalAlignment="Left" Margin="235,246,0,0" Name="textBlock4" Text="The IBCC would especially like to gain accounts from under-represented groups. These include: members of Bomber Command, airbase and other ground personnel, civilians who lived through the war, and soldiers who were posted abroad. Help the IBCC fill in the gaps in the stories traditionally told about the war. You are also encouraged to leave memories regarding the immediate aftermath of the war." TextAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="644" />
                </Grid>
               
            </TabItem>
            <TabItem Header="Form" Name="tabItem2" Height="35" Width="100" FontFamily="Century">
                <Grid>
                    <TextBox Height="45" HorizontalAlignment="Left" Margin="89,15,0,0" Name="titleText" VerticalAlignment="Top" Width="863" 
                             LostKeyboardFocus="TextBoxLostKeyboardFocus" MaxLines="1" FontSize="32" MaxLength="50" />
                    <TextBox Height="106" HorizontalAlignment="Left" Margin="89,66,0,0" Name="memoryText" VerticalAlignment="Top" Width="992" 
                             LostKeyboardFocus="TextBoxLostKeyboardFocus" MaxLines="5" FontSize="22" MaxLength="2000" TextWrapping="Wrap" />
                    <Label Content="TITLE*" Height="28" HorizontalAlignment="Left" Margin="19,15,0,0" Name="label2" VerticalAlignment="Top" FontFamily="Century"/>
                <Label Content="MEMORY*" Height="28" HorizontalAlignment="Left" Margin="6,72,0,0" Name="label3" VerticalAlignment="Top" FontFamily="Century"/>
                    <Button Content="SUBMIT" Height="45" HorizontalAlignment="Right" Margin="0,15,17,0" Name="sendButton" VerticalAlignment="Top" Width="105" Click="sendButton_Click" FontFamily="Century"/>
            

                <!---Tab Control for letters -->
                <TabControl Margin="0,178,0,0">
                    <TabItem Header="Letters" Name="letterTab" Height="45" Width="100">
