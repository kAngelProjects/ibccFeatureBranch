                            <Button Content="U" Height="50" HorizontalAlignment="Left" Margin="600,65,0,0" Name="uButton" VerticalAlignment="Top" Width="74" Click="uButton_Click" FontFamily="Century"/>
                            <Button Content="I" Height="50" HorizontalAlignment="Left" Margin="697,65,0,0" Name="iButton" VerticalAlignment="Top" Width="74" Click="iButton_Click" FontFamily="Century"/>
                            <Button Content="O" Height="50" HorizontalAlignment="Left" Margin="794,65,0,0" Name="oButton" VerticalAlignment="Top" Width="74" Click="oButton_Click" FontFamily="Century"/>
                            <Button Content="P" Height="50" HorizontalAlignment="Left" Margin="892,65,0,0" Name="pButton" VerticalAlignment="Top" Width="74" Click="pButton_Click" FontFamily="Century"/>
                            <Button Content="A" Height="50" HorizontalAlignment="Left" Margin="115,134,0,0" Name="aButton" VerticalAlignment="Top" Width="74" Click="aButton_Click" FontFamily="Century"/>
                            <Button Content="S" Height="50" HorizontalAlignment="Left" Margin="214,134,0,0" Name="sButton" VerticalAlignment="Top" Width="74" Click="sButton_Click" FontFamily="Century"/>
                            <Button Content="D" Height="50" HorizontalAlignment="Left" Margin="315,134,0,0" Name="dButton" VerticalAlignment="Top" Width="74" Click="dButton_Click" FontFamily="Century"/>
                            <Button Content="F" Height="50" HorizontalAlignment="Left" Margin="412,134,0,0" Name="fButton" VerticalAlignment="Top" Width="74" Click="fButton_Click" FontFamily="Century"/>
                            <Button Content="G" Height="50" HorizontalAlignment="Left" Margin="510,134,0,0" Name="gButton" VerticalAlignment="Top" Width="74" Click="gButton_Click" FontFamily="Century"/>
                            <Button Content="H" Height="50" HorizontalAlignment="Left" Margin="604,134,0,0" Name="hButton" VerticalAlignment="Top" Width="74" Click="hButton_Click" FontFamily="Century"/>
