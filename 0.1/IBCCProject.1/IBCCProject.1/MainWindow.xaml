        <Label Content="WARTIME MEMORIES" Height="84" FontSize="48" FontFamily="Century"
               HorizontalAlignment="Center" Margin="289,401,275,0" Name="title" VerticalAlignment="Top" Width="564"/>

        <TextBlock Name="AnimatedText" Margin="64,481,69,110" FontSize="32" FontWeight="Bold" Foreground="Black" TextAlignment="Center" 
                   FontFamily="Century" TextWrapping="Wrap"> Read memories in the words of the veterans themselves
            
              <!-- Animates the text block's opacity. -->
              <TextBlock.Triggers>
                <EventTrigger RoutedEvent="TextBlock.Loaded">
                  <BeginStoryboard>
                    <Storyboard>
                      <DoubleAnimation
                        Storyboard.TargetName="AnimatedText"
                        Storyboard.TargetProperty="(TextBlock.Opacity)"
                        From="1.0" To="0.0" Duration="0:0:5" 
                        AutoReverse="True" RepeatBehavior="Forever" />
                    </Storyboard>
                      
                  </BeginStoryboard>
                </EventTrigger>
              </TextBlock.Triggers>
                    </TextBlock>

        
        <!--end window code-->
    </Grid>
